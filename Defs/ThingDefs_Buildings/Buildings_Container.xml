<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="LogisticsContainerNormalBase">
        <defName>SmallLogisticsContainer</defName>
        <label>small logistics container</label>
        <description>A container connected to the logistics system for item storage. Items stored in the logistics container can be input and output through devices such as logistics interfaces within the same logistics system. Can store up to 2 stacks of items.</description>
        <graphicData>
            <texPath>Things/Building/SmallLogisticsContainer</texPath>
        </graphicData>
        <uiOrder>400</uiOrder>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <Flammability>0.5</Flammability>
            <WorkToBuild>1800</WorkToBuild>
        </statBases>
        <researchPrerequisites>
            <li>BasicLogistics</li>
        </researchPrerequisites>
        <costList>
            <Steel>20</Steel>
            <ConveyorBelt>1</ConveyorBelt>
        </costList>
        <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
        <building>
            <maxItemsInCell>2</maxItemsInCell>
        </building>
    </ThingDef>
    
