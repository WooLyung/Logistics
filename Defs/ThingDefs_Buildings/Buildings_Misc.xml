<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>LogisticsSystemController</defName>
        <label>logistics system controller</label>
        <thingClass>Logistics.Building_LogisticsSystemController</thingClass>
        <description>It is the controller for the logistics system.
            Each controller manages a single logistics warehouse, and the logistics system operates
            only while the controller is active.
            The controller consumes power proportional to the size of the room it's placed in, and
            the logistics system shuts down if power is lost.</description>
        <graphicData>
            <texPath>Things/Building/LogisticsSystemController</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(3.3,3.3)</drawSize>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <Flammability>0.6</Flammability>
        </statBases>
        <size>(3,2)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <defaultPlacingRot>North</defaultPlacingRot>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>LogisticsCategory</designationCategory>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>500</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />
        </comps>
        <researchPrerequisites>
            <li>BasicLogistics</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>