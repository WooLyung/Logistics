<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>LogisticsSystemController</defName>
        <label>logistics system controller</label>
        <thingClass>Logistics.Building_LogisticsSystemController</thingClass>
        <description>Controls the logistics system of a warehouse using a central core.
            Each logistics warehouse requires a single controller, and without it, the system cannot
            function.
            Due to limitations of the core, it cannot handle complex calculations, meaning not all
            logistics devices can be used simultaneously.

            \n\nThe controller consumes a large amount of power based on the size of the warehouse.
            To ensure stable operation, maintaining a reliable power supply is essential.</description>
        <graphicData>
            <texPath>Things/Building/LogisticsSystemController</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(0.9,0.9)</drawSize>
        </graphicData>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <Flammability>0.6</Flammability>
        </statBases>
        <size>(1,1)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <defaultPlacingRot>North</defaultPlacingRot>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>LogisticsCategory</designationCategory>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>500</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />
        </comps>
        <researchPrerequisites>
            <li>BasicLogistics</li>
        </researchPrerequisites>
    </ThingDef>
</Defs>