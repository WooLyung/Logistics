<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>LogisticsSystemController</defName>
        <label>logistics system controller</label>
        <thingClass>Logistics.Building_LogisticsSystemController</thingClass>
        <description>Controls the logistics system of a warehouse using a central core.
            Each logistics warehouse requires a single controller, and without it, the system cannot
            function.

            \n\nThe controller consumes a large amount of power based on the size of the warehouse.
            To ensure stable operation, maintaining a reliable power supply is essential.</description>
        <graphicData>
            <texPath>Things/Building/LogisticsSystemController</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(0.9,0.9)</drawSize>
        </graphicData>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <MaxHitPoints>400</MaxHitPoints>
            <WorkToBuild>8000</WorkToBuild>
            <Flammability>0.6</Flammability>
        </statBases>
        <size>(1,1)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <costList>
            <Steel>200</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
            <ConveyorBelt>4</ConveyorBelt>
        </costList>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>LogisticsCategory</designationCategory>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <tickerType>Rare</tickerType>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>500</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Breakdownable" />
        </comps>
        <researchPrerequisites>
            <li>BasicLogistics</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="BuildingBase">
        <defName>Conveyor</defName>
        <designationCategory>LogisticsCategory</designationCategory>
        <label>conveyor</label>
        <description>A conveyor used to extend the logistics system beyond the logistics warehouse.
            Connects conveyor interfaces and other logistics devices that are part of the system.
            Conveyors are directional and their orientation affects functionality.</description>
        <graphicData>
            <texPath>Things/Building/Conveyor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <building>
            <isEdifice>false</isEdifice>
        </building>
        <useHitPoints>true</useHitPoints>
        <selectable>true</selectable>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <blockWind>false</blockWind>
        <passability>Standable</passability>
        <pathCost>0</pathCost>
        <fillPercent>0.4</fillPercent>
        <researchPrerequisites>
            <li>ConveyorInterface</li>
        </researchPrerequisites>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <Flammability>0.5</Flammability>
            <WorkToBuild>1000</WorkToBuild>
        </statBases>
        <placeWorkers>
            <li>PlaceWorker_Conduit</li>
        </placeWorkers>
        <costList>
            <ConveyorBelt>1</ConveyorBelt>
        </costList>
        <comps>
            <li Class="Logistics.CompProperties_Conveyor" />
        </comps>
        <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    </ThingDef>
</Defs>